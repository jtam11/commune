<h2>talk#show</h2>

<div class="row">
  <div class="col s12 m6">
    <div class="card purple darken-3">
      <div class="card-content white-text">
        <span class="card-title"> <%= @talk.title %> </span>
        <ul>
          <li> Date: <strong><%= @talk.date.strftime("%b %d, %Y") %></strong> Time: <%= @talk.start_time.strftime('%I:%M %p') %> - <%= @talk.end_time.strftime('%I:%M %p') %> </li>
          <li> Address: <%= @talk.location %> </li>
          <li> Description: <%= @talk.description %> </li>
          <li> Available Spots: <%= @talk.spots %> </li>
          <li> <%= time_ago_in_words(@talk.created_at) %> ago </li>
        </ul>
      </div>
      <%= link_to "Edit", edit_talk_path(@talk), class:"btn waves-effect cyan darken-1" %>
      <%= link_to "Delete", talk_path(@talk), data: { confirm: "Are you sure you want to delete this talk?" }, method: :delete, class: "btn waves-effect red accent-2 right" %>
    </div>
  </div>
</div>

<%= link_to "Back", talks_path, class:"btn waves-effect blue-grey lighten-1" %>
